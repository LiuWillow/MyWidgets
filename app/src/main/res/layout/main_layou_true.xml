<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="聊天"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goMsgActivity"
        />
    <Button
        android:text="沉浸式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goChenjinActivity"
        />
    <Button
        android:text="加载图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goLoadActivity"
        />
    <Button
        android:text="芝麻积分"
        android:onClick="goZhimaActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="等待动画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goWaitingActivity"/>

    <Button
        android:text="轮转pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goBannerActivity"/>
</LinearLayout>