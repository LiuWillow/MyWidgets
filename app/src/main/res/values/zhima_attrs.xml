<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundIndicatorView">
        <!--最大数值-->
        <attr name="maxNum" format="integer"/>
        <!--圆盘起始角度-->
        <attr name="startAngle" format="integer"/>
        <!--圆盘扫过的角度-->
        <attr name="sweepAngle" format="integer"/>
    </declare-styleable>


    <declare-styleable name="CircleIndicatorView">
        <!--圆点半径-->
        <attr name="indicatorRadius" format="integer"/>
        <!--原点边界宽度-->
        <attr name="indicatorBorderWidth" format="integer"/>
        <!--原点空隙-->
        <attr name="indicatorSpace" format="dimension"/>
        <!--原点颜色-->
        <attr name="indicatorColor" format="color"/>
        <!--原点选中颜色-->
        <attr name="indicatorSelectColor" format="color"/>
        <!--文字颜色-->
        <attr name="textColor" format="color"/>
        <!--原点类型-->
        <attr name="fill_mode">
            <enum name="letter" value="0"/>
            <enum name="number" value="1"/>
            <enum name="none" value="2"/>
        </attr>
    </declare-styleable>

</resources>